
@{
    ViewBag.Title = "index";
}

<h2>This is DataBase operation Demo Page</h2>
<h4><a href="/DataBase/Add_Page">新增记录</a></h4>

<br />
<table border="1">
    <tr>
        <th> 用户ID</th>
        <th>用户名</th>
        <th>用户性别</th>
        <th>修改</th>
        <th>删除</th>
    </tr>
    @{
        foreach (var item in ViewBag.table)
        {
            <tr>
                <td>@item.id</td>&nbsp;&nbsp;
                <td>@item.name</td>&nbsp;&nbsp;
                <td>@item.sex</td> 
                <!--<td>@Html.ActionLink("修改", "Update", "DataBase")</td>-->
                <td><a href="/DataBase/Update_Page/@item.id">修改</a></td>
                <td><a href="/DataBase/Delete/@item.id">删除</a></td>
            </tr>
        }
    }

</table>